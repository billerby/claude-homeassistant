site:
  title: Home # display name for UI
  meters:
    grid: my_grid
    pv:
      - my_pv
    battery:
      - my_battery
      

# define your loadpoints according your needs
# see https://docs.evcc.io/en/docs/reference/configuration/loadpoints
loadpoints:
  - title: Parkeringen # display name for UI
    charger: my_charger # charger

# meter definitions
# name can be freely chosen and is used as reference when assigning meters to site and loadpoints
# for documentation see https://docs.evcc.io/docs/devices/meters
meters:
  # replace with your real grid meter
  - name: my_grid
    type: template
    template: huawei-sun2000
    usage: grid
    
    modbus: rs485tcpip
    id: 1
    #host: localhost
    #port: 503
  # replace with your real pv system
  - name: my_pv
    type: template
    template: huawei-sun2000
    usage: pv
    
    modbus: rs485tcpip
    id: 1
    #host: localhost
    #port: 503
  # replace with your real battery
  - name: my_battery
    type: template
    template: huawei-sun2000
    usage: battery
    
    modbus: rs485tcpip
    id: 1
    #host: localhost
    #port: 503
    maxchargepower: 4000 # Power limit for grid charging. (optional)
    capacity: 15 # Battery capacity in kWh (optional)
    
# see https://docs.evcc.io/docs/devices/chargers
